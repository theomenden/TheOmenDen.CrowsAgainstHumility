@page "/contactUs"
<SEO Canonical="/contactUs" Title="Contact The Omen Den Support" Description="Contact The Omen Den's support staff if there's something you need addressed by using the form on this page!" />

<Container
     Background="Background.Dark"
     Shadow="Shadow.Large"
     Border="Border.Is2.Light.OnAll.Rounded"
     Padding="Padding.Is4.OnY"
     Display="Display.Table">
    <Form Margin="Margin.Is2.OnY">
        <Row Display="Display.TableRow">
            <Column ColumnSize="ColumnSize.Is8.OnFullHD.Is10.OnDesktop.IsFull.OnMobile">
                <Fields>
                    <Field Horizontal>
                        <FieldLabel TextColor="TextColor.Light">
                            First Name
                        </FieldLabel>
                        <FieldBody>
                            <TextEdit />
                        </FieldBody>
                    </Field>
                    <Field Horizontal>
                        <FieldLabel TextColor="TextColor.Light">
                            Last Name
                        </FieldLabel>
                        <FieldBody>
                            <TextEdit />
                        </FieldBody>
                    </Field>
                </Fields>
            </Column>
        </Row>
        <Row Display="Display.TableRow">
            <Column ColumnSize="ColumnSize.Is8.OnFullHD.Is10.OnDesktop.IsFull.OnTablet">
                <Fields>
                    <Field Horizontal>
                        <FieldLabel TextColor="TextColor.Light">
                            Email
                        </FieldLabel>
                        <FieldBody>
                            <Addons>
                                <Addon AddonType="AddonType.Start">
                                    <AddonLabel>
                                        <Icon Name="IconName.Mail" />
                                    </AddonLabel>
                                    <Addon AddonType="AddonType.Body">
                                        <TextEdit Role="TextRole.Email" />
                                    </Addon>
                                </Addon>
                            </Addons>
                        </FieldBody>
                    </Field>
                </Fields>
            </Column>
        </Row>
    </Form>
</Container>