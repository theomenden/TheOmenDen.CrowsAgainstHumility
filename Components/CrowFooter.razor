<Bar Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark"
     Shadow="Shadow.Large"
     Class="footer">
    <BarBrand />
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <Dropdown Direction="Direction.Up">
                    <DropdownToggle TextColor="TextColor.Muted">
                        <BarIcon IconName="IconName.Book" TextColor="TextColor.Muted" />
                        Policies
                    </DropdownToggle>
                    <DropdownMenu Background="Background.Dark">
                        <DropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/privacy-policy"))">
                            Privacy Policy<Icon Name="IconName.Link" />
                        </DropdownItem>
                        <DropdownDivider Background="Background.Primary" />
                        <DropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/terms-of-service"))">
                            Terms of Service<Icon Name="IconName.Link" />
                        </DropdownItem>
                    </DropdownMenu>
                </Dropdown>
            </BarItem>
        </BarStart>
        <BarBrand Margin="Margin.Is2.FromEnd" Casing="CharacterCasing.Upper">
            <BarItem>
                <BarLink To=""
                         TextWeight="TextWeight.Light"
                         TextColor="TextColor.White50">
                    Crows Against Humility
                </BarLink>
            </BarItem>
        </BarBrand>
        <BarEnd>
            <BarItem Margin="Margin.Is3.FromEnd">
                <Dropdown Direction="Direction.Up">
                    <DropdownToggle TextColor="TextColor.Muted">
                        <Icon Name="IconName.Code" IconSize="IconSize.Large" TextColor="TextColor.Muted" />
                        App Information
                    </DropdownToggle>
                    <DropdownMenu Background="Background.Dark">
                        <DropdownItem TextColor="TextColor.Muted">
                            Build: @AssemblyProductVersion
                        </DropdownItem>
                        <DropdownDivider Background="Background.Primary" />
                        <DropdownItem TextColor="TextColor.Muted">
                            <Icon Name="@("fa-crow")" IconSize="IconSize.Large" />
                            <Blazorise.Link To="https://aluthecrow.info" Target="Target.Blank">
                                Alu's Carrd <Icon Name="IconName.ExternalLinkSquareAlt" />
                            </Blazorise.Link>
                        </DropdownItem>
                        <DropdownItem TextColor="TextColor.Muted"
                                      Flex="Flex.Column.JustifyContent.Between">
                            <Blazorise.Link To="https://theomenden.com" Target="Target.Blank">
                                @ApplicationDevelopmentCompany
                                <Icon Name="IconName.ExternalLinkSquareAlt" />
                            </Blazorise.Link>
                            <Small>
                                <Icon Name="IconName.Copyright" IconSize="IconSize.Large" />
                                Copyright 2023
                            </Small>
                        </DropdownItem>
                        <DropdownDivider Background="Background.Primary" />
                        <DropdownItem TextColor="TextColor.Muted">
                            Powered By: <Blazorise.Link To="https://blazorise.com" Target="Target.Blank">
                                Blazorise
                                <Icon Name="IconName.ExternalLinkSquareAlt" />
                            </Blazorise.Link>
                        </DropdownItem>
                    </DropdownMenu>
                </Dropdown>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>