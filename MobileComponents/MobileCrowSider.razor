<Bar @ref="@_sideBar"
     Mode="BarMode.VerticalInline"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Tablet"
     NavigationBreakpoint="Breakpoint.Tablet"
     Shadow="Shadow.Large">
    <BarToggler />
    <BarBrand Flex="Flex.AlignContent.Center.JustifyContent.Center">
        <BarLink To="">
            <Image Source="images/logo_without_text_and_tagline.png"
                   Text="Crows Against Humility Logo" />
        </BarLink>
    </BarBrand>
    <BarMenu Margin="Margin.Is3.FromTop">
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Home" />
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/rules">
                    <BarIcon IconName="IconName.RulerHorizontal" />
                    Rules
                </BarLink>
            </BarItem>
            <AuthorizeView>
                <BarItem>
                    <BarLink To="/game-list">
                        <BarIcon IconName="IconName.Gamepad" />
                        Lobbies
                    </BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="/chat">
                        <BarIcon IconName="IconName.Comments" />
                        Chat Rooms
                    </BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>
        <BarEnd Margin="Margin.Is4.FromBottom">
            <BarItem>
                <LoginDisplay />
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle TextColor="TextColor.Muted">
                        <BarIcon IconName="IconName.QuestionCircle" Margin="Margin.Is1.FromEnd" />
                        Support
                    </BarDropdownToggle>
                    <BarDropdownMenu Background="Background.Dark">
                        <BarDropdownItem TextColor="TextColor.Muted"
                                         Clicked="@(() => NavigationManager.NavigateTo("/contactUs"))">
                            Contact Us
                            <BarIcon IconName="IconName.Mail" Margin="Margin.Is1.FromEnd" />
                        </BarDropdownItem>
                        <BarDropdownDivider Background="Background.Primary" />
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Book" Margin="Margin.Is1.FromEnd" />
                                Policies
                            </BarDropdownToggle>
                            <BarDropdownMenu Background="Background.Dark">
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/privacy-policy"))">
                                    Privacy Policy<BarIcon IconName="IconName.Lock" Margin="Margin.Is1.FromStart" />
                                </BarDropdownItem>
                                <BarDropdownDivider Background="Background.Primary" />
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/terms-of-service"))">
                                    Terms of Service<BarIcon IconName="IconName.UserCheck" Margin="Margin.Is1.FromStart" />
                                </BarDropdownItem>
                                <BarDropdownDivider Background="Background.Primary" />
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/cookie"))">
                                    Cookie Consent<BarIcon IconName="@("fa-cookie")" Margin="Margin.Is1.FromStart" />
                                </BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>
