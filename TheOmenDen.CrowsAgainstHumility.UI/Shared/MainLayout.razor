@layout RootLayout
@inherits LayoutComponentBase
<SEO Title="@ApplicationTitle" Canonical="/" Description="Crows Against Humility Main layout" />
<Layout Sider>
    <LayoutSider>
        <LayoutSiderContent>
            <CrowSider />
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed>
            <CrowHeader />
        </LayoutHeader>
        <LayoutContent Padding="Padding.Is4.OnX" Margin="Margin.Is2.OnY">
            <LoadingIndicator FullScreen>
                @Body
            </LoadingIndicator>
        </LayoutContent>
        <LayoutFooter Fixed>
            <CrowFooter />
        </LayoutFooter>
    </Layout>
</Layout>