<Bar @ref="@_sideBar"
     Mode="BarMode.VerticalInline"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Mobile"
     Shadow="Shadow.Large">
    <BarToggler />
    <BarBrand Flex="Flex.AlignContent.Center.JustifyContent.Center">
        <BarItem>
            <BarLink To="" Margin="Margin.Is3.FromTop"
                     Class="link-light text-decoration-none">
                <BarIcon IconName="IconName.Dashboard"/>
                Crows Against Humility
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Home"/>
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/rules">
                    <BarIcon IconName="IconName.RulerHorizontal"/>
                    Rules
                </BarLink>
            </BarItem>
            <AuthorizeView>
                <BarItem>
                    <BarLink To="/game-list">
                        <BarIcon IconName="IconName.Gamepad"/>
                        Lobbies
                    </BarLink>
                </BarItem>
                <BarItem>
                    <BarLink To="/chat">
                        <BarIcon IconName="IconName.Comments"/>
                        Chat Rooms
                    </BarLink>
                </BarItem>
            </AuthorizeView>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle TextColor="TextColor.Muted">
                        <BarIcon IconName="IconName.QuestionCircle" Margin="Margin.Is1.FromEnd"/>
                        Support
                    </BarDropdownToggle>
                    <BarDropdownMenu Background="Background.Dark">
                        <BarDropdownItem TextColor="TextColor.Muted"
                                      Clicked="@(() => NavigationManager.NavigateTo("/contactUs"))">
                            Contact Us
                            <BarIcon IconName="IconName.Mail" Margin="Margin.Is1.FromEnd"/>
                        </BarDropdownItem>
                        <BarDropdownDivider Background="Background.Primary"/>
                        <BarDropdown>
                            <BarDropdownToggle>
                                <BarIcon IconName="IconName.Book" Margin="Margin.Is1.FromEnd"/>
                                Policies
                            </BarDropdownToggle>
                            <BarDropdownMenu Background="Background.Dark">
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/privacy-policy"))">
                                    Privacy Policy<BarIcon IconName="IconName.Lock" Margin="Margin.Is1.FromStart"/>
                                </BarDropdownItem>
                                <BarDropdownDivider Background="Background.Primary"/>
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/terms-of-service"))">
                                    Terms of Service<BarIcon IconName="IconName.UserCheck" Margin="Margin.Is1.FromStart"/>
                                </BarDropdownItem>
                                <BarDropdownDivider Background="Background.Primary"/>
                                <BarDropdownItem TextColor="TextColor.Muted" Clicked="@(() => NavigationManager.NavigateTo("/cookie"))">
                                    Cookie Consent<BarIcon IconName="@("fa-cookie")" Margin="Margin.Is1.FromStart"/>
                                </BarDropdownItem>
                            </BarDropdownMenu>
                        </BarDropdown>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem Margin="Margin.Is3.FromEnd">
                <BarDropdown >
                    <BarDropdownToggle TextColor="TextColor.Muted">
                        <BarIcon IconName="IconName.Code" IconSize="IconSize.Large" TextColor="TextColor.Muted"/>
                        App Information
                    </BarDropdownToggle>
                    <BarDropdownMenu Background="Background.Dark">
                        <BarDropdownItem TextColor="TextColor.Muted">
                            Build: @AssemblyProductVersion
                        </BarDropdownItem>
                        <BarDropdownDivider Background="Background.Primary"/>
                        <BarDropdownItem TextColor="TextColor.Muted">
                            <BarIcon IconName="@("fa-crow")" IconSize="IconSize.Large"/>
                            <BarLink To="https://aluthecrow.info" Target="Target.Blank">
                                Alu's Carrd <Icon Name="IconName.ExternalLinkSquareAlt"/>
                            </BarLink>
                        </BarDropdownItem>
                        <BarDropdownItem TextColor="TextColor.Muted"
                                      Flex="Flex.Column.JustifyContent.Between">
                            <BarLink To="https://theomenden.com" Target="Target.Blank">
                                @ApplicationDevelopmentCompany
                                <BarIcon IconName="IconName.ExternalLinkSquareAlt"/>
                            </BarLink>
                            <Small>
                                <BarIcon IconName="IconName.Copyright" IconSize="IconSize.Large"/>
                                Copyright 2023
                            </Small>
                        </BarDropdownItem>
                        <BarDropdownDivider Background="Background.Primary"/>
                        <BarDropdownItem TextColor="TextColor.Muted">
                            Powered By:
                            <BarLink To="https://blazorise.com" Target="Target.Blank">
                                Blazorise
                                <BarIcon IconName="IconName.ExternalLinkSquareAlt"/>
                            </BarLink>
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>